{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": false,
    "strictNullChecks": true,
    "declaration": true,
    "listEmittedFiles": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/**/*.test.ts"]
}