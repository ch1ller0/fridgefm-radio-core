{
  "name": "@fridgefm/radio-core",
  "author": "Grigory Gorshkov",
  "version": "4.0.0",
  "description": "internet radio engine made on NodeJS platform",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=12.22.2"
  },
  "keywords": [
    "radio",
    "music",
    "mp3",
    "highland",
    "stream",
    "nodejs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ch1ller0/fridgefm-radio-core.git"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint --fix ./src/**/*",
    "lint:ci": "eslint ./src/**/*",
    "test": "jest --config jest.config.json",
    "test:cov": "yarn test --collectCoverage=true"
  },
  "dependencies": {
    "@fridgefm/inverter": "^0.1.9",
    "chalk": "^4.1.2",
    "dev-null": "^0.1.1",
    "fs-extra": "^9.1.0",
    "get-mp3-duration": "^1.0.0",
    "highland": "^2.13.5",
    "klaw-sync": "^6.0.0",
    "node-id3": "^0.2.3",
    "typed-emitter": "^1.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/highland": "^2.12.14",
    "@types/jest": "^27.0.2",
    "@types/klaw-sync": "^6.0.1",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": ">=11.2.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "bugs": {
    "url": "https://github.com/ch1ller0/fridgefm-radio-core/issues"
  },
  "homepage": "http://fridgefm.com",
  "directories": {
    "example": "examples"
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "yarn lint"
    ]
  }
}
